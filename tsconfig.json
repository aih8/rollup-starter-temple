{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "environment": [
                "./src/environment/index.ts"
            ]
        },
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2017"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "demo",
        "dist",
        "build"
    ]
}